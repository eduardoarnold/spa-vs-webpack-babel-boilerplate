# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Indentation override for all JS and JSON file
[*.{js, json}]
indent_style = space
indent_size = 2

# Indentation override for all HTML file
[*.html]
indent_style = space
indent_size = 4
